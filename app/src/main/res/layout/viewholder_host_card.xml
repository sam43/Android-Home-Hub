<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="afterDescendants"
    android:padding="@dimen/single_margin">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?card_background_color"
        android:elevation="@dimen/eigth_margin"
        android:paddingHorizontal="@dimen/single_margin"
        android:paddingVertical="@dimen/quarter_margin"
        android:text="@string/restart_server"
        android:textAllCaps="false"
        android:textColor="?text_color"
        android:textSize="@dimen/medium_text"
        app:cornerRadius="@dimen/triple_and_half_margin"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>